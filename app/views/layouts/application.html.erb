<!DOCTYPE html>
<html>
<head>
  <title>Helpasso</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>   
  
  
  <nav class="navbar navbar-default">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
       <%= link_to(root_path) do %>
      <%= image_tag("HelpAsso.png", :width => "180rem")%>
      <% end %>
    </div>


    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <% if user_signed_in? %>
        <ul class="nav navbar-nav navbar-right">
            <% unless current_user.checklists.count > 0 %>
              <li class="btn"><%= link_to 'Commencer', new_checklist_path %></li>
            <% end %>
            <li class="btn"><%= link_to "Mon compte" , edit_user_registration_path %></li>
            <li class="btn"><%= link_to "DÃ©connexion" , destroy_user_session_path , method: :delete %></li>
        </ul>
      <% else %>
          <ul class="nav navbar-nav navbar-right">
            <li class="btn"><%= link_to 'Commencer', new_checklist_path %></li>
            <li class="btn"><%= link_to "Login" , new_user_session_path %></li>
            <li class="btn"><%= link_to "Inscription" , new_user_registration_path %></li>
        </ul>
        <% end %>

    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>
   
   
    <div class="container-fluid">


      
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
      <%= yield %>

    </div>


</body>
</html>






