<!-- Si un utilisateur arrive sur cette page alors qu'il a déjà remplit le questionnaire, on ne lui affiche pas les questions. -->
<% if current_user.checklists.exists? %>

  <p>Désolé, vous avez déjà remplit ce questionnaire !
  Rendez-vous sur l'<%= link_to "accueil", root_path %> pour consultez nos recommandations.</p>

  <% else %>

    <%= simple_form_for (@checklist) do |f| %>
      <%= f.error_notification %>

      <div id="carousel-example-generic" class="carousel slide" data-ride="">
  <!-- Indicators -->
  <ol class="carousel-indicators">

      <li id="headerForm1" data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
      <li id="headerForm2" data-target="#carousel-example-generic" data-slide-to="1"></li>
      <li id="headerForm3" data-target="#carousel-example-generic" data-slide-to="2"></li>
      <li id="headerForm4" data-target="#carousel-example-generic" data-slide-to="3"></li>
      <li id="headerForm5" data-target="#carousel-example-generic" data-slide-to="4"></li>
      <li id="headerForm6" data-target="#carousel-example-generic" data-slide-to="5"></li>
    </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner">
    <div class="item active">
      <div class="formCheck">
        <%= f.input :networks, label: 'Votre association a-t-elle un profil sur Facebook, Twitter et Instagram ?', as: :radio_buttons%>
      </div>
    <div class="carousel-caption">
      <!-- title -->
    </div>
  </div>
    <div class="item">
        <div class="formCheck">
          <%= f.input :pro_networks, label: 'Votre association a-t-elle un profil sur LinkedIn, Viadeo ou Xing ?', as: :radio_buttons %>
        </div>
        <div class="carousel-caption">
          <!-- title -->
      </div>
    </div>
      <div class="item">
        <div class="formCheck">
          <%= f.input :community, label: 'Postez-vous régulièrement des informations sur les réseaux sociaux ?', as: :radio_buttons %>
        </div>
        <div class="carousel-caption">
          <!-- title -->
      </div>
    </div>
      <div class="item">
        <div class="formCheck">
          <%= f.input :cms, label: 'Utilisez-vous un système de gestion de contenu (Wordpress, Wix, etc.) ?', as: :radio_buttons %>
        </div>
        <div class="carousel-caption">
          <!-- title -->
      </div>
    </div>
      <div class="item">
        <div class="formCheck">
        <%= f.input :seo, label: 'Votre site internet s\'affiche t-il dans les premiers résultats lors d\'une recherche sur Google ?',  as: :radio_buttons %>
        </div>
        <div class="carousel-caption">
          <!-- title -->
      </div>
    </div>
      <div class="item">
        <div class="formCheck">
        <%= f.input :crowdfunding, label: 'Avez-vous déjà utilisé des plateformes de collecte de dons / crowdfunding ?', as: :radio_buttons %>
        </div>
      <div class="carousel-caption">
          <!-- title -->
      </div>
    </div>
    <div class="item">
        <div class="formCheck">
          <div class="form-actions">
            <%= f.button :submit %>
          </div>
        </div>
      <div class="carousel-caption">
          <!-- title -->
      </div>
    </div>





  <!-- Controls -->
  <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left"></span>
  </a>

</div> <!-- Carousel -->
      
    <% end %>

<% end %>
