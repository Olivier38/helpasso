<p id="notice"><%= notice %></p>

<h1>Listing Advices</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |c| %>
      <p><a href="#"><%= c.name %></a></p>
    <% end %>

    <% @advices.each do |advice| %>
      <tr class = "cat<%= advice.category_id %>">
        <td><%= advice.name %></td>
        <td><%= advice.content %></td>
        <td><%= link_to 'Show', advice %></td>
        <td><%= link_to 'Edit', edit_advice_path(advice) %></td>
        <td><%= link_to 'Destroy', advice, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

