<div class="form">
   <div class="banner">
      <h2>Se connecter</h2>
<div class="field">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
</div>
       
       <div class="spacing"></div>
        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true %>
        </div>

       <div class="spacing"></div>
        <div class="field">
          <%= f.label :mot_de_passe %><br />
          <%= f.password_field :password, autocomplete: "off" %>
        </div>

       <div class="spacing"></div>
        <% if devise_mapping.rememberable? -%>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :se_souvenir_de_moi %>
          </div>
        <% end -%>

       <div class="spacing"></div>
        <div class="actions btn-signup">
          <%= f.submit "Connexion", :class => 'btn-not-full' %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
  </div>
</div>